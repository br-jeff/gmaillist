<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anddroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/background_card_view">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
       >

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/background_name_circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="F" />


        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_icon"
            android:layout_marginEnd="179dp"
            android:layout_toStartOf="@+id/txt_date"
            android:layout_toEndOf="@id/txt_icon"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="FACEBOOK" />

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_below="@id/txt_user"
            android:layout_alignStart="@+id/txt_user"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/txt_icon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="testestesteste teste" />

        <TextView
            android:id="@+id/txt_preview"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="previewpewviewpewviewopewview"
            android:layout_below="@id/txt_subject"
            android:layout_alignStart="@+id/txt_user"
            android:layout_marginEnd="24sp"
            />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="17dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="12 dez" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/txt_date"
            android:layout_alignEnd="@id/txt_preview"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-4dp"
            android:src="@drawable/ic_star_border_black_24dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
